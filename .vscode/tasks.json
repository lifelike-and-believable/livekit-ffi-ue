{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build LiveKit FFI (Release)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/tools/build.ps1",
				"-WithLiveKit",
				"-UePluginDir",
				"ue\\Plugins\\LiveKitBridge"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Build FFI + Sandbox (Release, Editor)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/tools/build.ps1",
				"-WithLiveKit",
				"-UePluginDir",
				"ue\\Plugins\\LiveKitBridge",
				"-BuildSandbox"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Prepare LiveKit Sandbox",
			"dependsOn": [
				"Link LiveKit Plugin to Sandbox",
				"Build LiveKit FFI (Release)"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Link LiveKit Plugin to Sandbox",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/tools/link-plugin.ps1",
				"-ProjectDir",
				"ue\\LiveKitSandbox",
				"-PluginSrc",
				"ue\\Plugins\\LiveKitBridge"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "LiveKit Server (Dev)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"& \"${workspaceFolder}\\tools\\livekit-server.exe\" start --dev --bind 0.0.0.0"
			],
			"isBackground": true,
			"group": "none"
		}
	]
}