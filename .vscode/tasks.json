{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build LiveKit FFI (Release)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/build.ps1",
        "-WithLiveKit",
        "-UePluginDir",
        "ue\\Plugins\\LiveKitBridge"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Prepare LiveKit Sandbox",
      "dependsOn": [
        "Link LiveKit Plugin to Sandbox",
        "Build LiveKit FFI (Release)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Link LiveKit Plugin to Sandbox",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/link-plugin.ps1",
        "-ProjectDir",
        "ue\\LiveKitSandbox",
        "-PluginSrc",
        "ue\\Plugins\\LiveKitBridge"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
